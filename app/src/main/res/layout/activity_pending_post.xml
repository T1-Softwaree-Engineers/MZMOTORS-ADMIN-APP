<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PendingPost">

  <ProgressBar
      android:id="@+id/progress_bar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"/>


  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/topbar">

    <TextView
        android:id="@+id/txtlogo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/racing_sans_one"
        android:gravity="center"
        android:text="MZMOTORS"
        android:textColor="#0066CC"
        android:textSize="30dp" />
    <ImageView
        android:id="@+id/flecha_atras"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/flecha" >

    </ImageView>



    <TextView
        android:id="@+id/txtmypost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtlogo"

        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="Pending posts"
        android:textColor="#262626"
        android:textSize="20dp" />

  </RelativeLayout>

  <!--Fin de la barra de navegacion-->

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/listRecycleView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="8dp"
      android:layout_below="@+id/topbar"/>



</RelativeLayout>